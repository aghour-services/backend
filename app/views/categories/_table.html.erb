<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Icon</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %> </td>
        <td><%= category.name %></td>
        <td> <img width='40' height='40' src=<%= cloudinary_url(category.icon_path) %>> </td>
        <td>
          <%= link_to "Edit", edit_category_path(category) %>
          |
          <%= link_to "Firms", firms_path(category_id: category.id) %>
          |
          <%= link_to "Add Firm", new_category_firm_path(category) %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
