<h2> Category: <%= @category.name %> </h2>
<%= form_for [@category, @firm] do |form| %>
  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %> </div>
      <div class="col"> <%= form.text_field :address, class: 'form-control', placeholder: 'Address' %> </div>
      <div class="col"> <%= form.text_field :phone_number, class: 'form-control', placeholder: 'Phone Number', type: 'phone number' %> </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.text_area :description, class: 'form-control', placeholder: 'Description' %> </div>
      <div class="col"> <%= form.text_field :tags, class: 'form-control', placeholder: 'Tags' %> </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.text_field :fb_page, class: 'form-control', placeholder: "Facebook" %> </div>
      <div class="col"> <%= form.text_field :email, class: 'form-control', placeholder: 'Email', type: 'email' %> </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col"><%= form.select :status, Firm.statuses.map(&:first),{prompt:'select'},{class: "form-control"}%> </div>
      <div class="col"><%= form.select :category_id, Category.all.pluck(:name,:id), {prompt:'select'},{class: "form-control"}%> </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.submit class: 'btn btn-primary' %> </div>
    </div>
  </div>
<% end %>
