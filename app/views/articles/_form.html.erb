<h1> Create Article </h1>
<%= form_for [@article] do |form| %>
  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.text_area :description, class: 'form-control', placeholder: 'Description' %> </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col"><%= form.select :status, Article.statuses.map(&:first),{prompt:'select'},{class: "form-control"}%> </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col"> <%= form.submit class: 'btn btn-primary' %> </div>
    </div>
  </div>
<% end %>
