<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Address</th>
      <th scope="col">Description</th>
      <th scope="col">Tags</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Status</th>
      <th scope="col">User</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @firms.each do |firm| %>
      <% category = firm.category %>
      <tr>
        <td><%= firm.id %> </td>
        <td><%= firm.name %></td>
        <td><%= firm.category.name %></td>
        <td><%= firm.address %></td>
        <td><%= firm.description %></td>
        <td><%= firm.tags %></td>
        <td><%= firm.phone_number %></td>
        <td> <%= status(firm.status) %> </td>
        <td> <%= firm.user&.dispaly %> </td>
        <td>
          <%= button_to 'Edit', edit_category_firm_path(category, firm), class: "btn btn-outline-success", method: :get %>
          <%= button_to 'Destroy', category_firm_path(category, firm), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
